    <script>
        function generarPerfil() {
            const edad = document.getElementById('edad').value;
            const genero = document.getElementById('genero').value;
            const intereses = document.getElementById('intereses').value;
            const dolores = document.getElementById('dolores').value;

            const resultado = `
                <h2>Perfil Psicológico Generado</h2>
                <p><strong>Edad Promedio:</strong> ${edad}</p>
                <p><strong>Género:</strong> ${genero}</p>
                <p><strong>Intereses Principales:</strong> ${intereses}</p>
                <p><strong>Problemas Comunes:</strong> ${dolores}</p>
                <p><strong>Insight:</strong> Este cliente está motivado por ${intereses.split(',')[0]} 
                y probablemente responde bien a mensajes que abordan sus problemas de ${dolores.split(',')[0]}.</p>
            `;

            document.getElementById('resultado').innerHTML = resultado;
            document.getElementById('resultado').style.display = 'block';
        }
    </script>
